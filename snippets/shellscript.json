{
	"shebang": {
		"prefix": ["bash", "/bin/bash", "#!"],
		"body": [
			"#! /bin/bash"
		]
	},
	"for": {
		"prefix": "for",
		"body": [
			"for i in $(seq $0); do",
			"\t",
			"done"
		]
	},
	"for(array)": {
		"prefix": ["for(array)"],
		"body": [
			"for x in ${array[@]}; do",
			"\t",
			"done"
		]
	},
	"if": {
		"prefix": "if",
		"body": [
			"if [ $0 ]; then",
			"\t",
			"fi"
		]
	},
	"if/elif": {
		"prefix": "if_elif",
		"body": [
			"if [ $0 ]; then",
			"\t",
			"elif [  ]; then",
			"\t",
			"else",
			"\t",
			"fi"
		]
	},
	"not": {
		"prefix": "not",
		"body": [
			"!"
		]
	},
	"if not exist": {
		"prefix": "if_not_exist",
		"body": [
			"if ! [ -e $0 ]; then",
			"\techo -e \"\\e[31m[Error] <file> doesn't exist.\\e[0m\"",
			"\texit",
			"fi"
		]
	},
	"command": {
		"prefix": ["$()", "command"],
		"body": [
			"$(${TM_SELECTED_TEXT}$0)"
		]
	},
	"text_equal": {
		"prefix": "eq_text",
		"body": [
			"[[ \"${${TM_SELECTED_TEXT}$0}\" == \\\"<TEXT>\\\" ]]"
		]
	},
	"text_include": {
		"prefix": "include",
		"body": [
			"[[ \"${${TM_SELECTED_TEXT}$0}\" == *<TEXT>* ]]"
		]
	},
	"text_empty": {
		"prefix": "empty",
		"body": [
			"[ -z \"${${TM_SELECTED_TEXT}$0}\" ]"
		]
	},
	"less than": {
		"prefix": "less_than",
		"body": [
			"(( $0 <  ))"
		]
	},
	"greater than": {
		"prefix": "greater_than",
		"body": [
			"(( $0 >  ))"
		]
	},
	"current_fullpath": {
		"prefix": "current_fullpath",
		"body": [
			"$(cd $(dirname \\$0); pwd)"
		]
	},
	"getargs": {
		"prefix": "getargs",
		"body": [
			"while (( \\$# > 0 )); do",
			"\tcase \\$1 in",
			"\t\t-v | --version )",
			"\t\t\techo",
			"\t\t\t;;",
			"\t\t-a | --arg )",
			"\t\t\techo \\$2",
			"\t\t\tshift",
			"\t\t\t;;",
			"\tesac",
			"\tshift",
			"done"
		]
	},
	"error_check": {
		"prefix": ["if error", "if_error", "iferror"],
		"body": [
			"if ! $0; then",
			"\techo -e \"\\e[31m[ERROR]\\e[0m\" ",
			"\treturn 1",
			"fi"
		]
	},
	"echo red": {
		"prefix": "echo(red)",
		"body": [
			"echo -e \"\\e[31m<TEXT>\\e[0m\""
		]
	}

}
